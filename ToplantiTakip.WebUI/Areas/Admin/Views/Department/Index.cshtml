@model  ToplantiTakip.WebUI.Areas.Admin.Models.TagModels.DepartmentsAdminListViewModel
@using ToplantiTakip.WebUI.HTMLHelpers;
@{
    ViewBag.Title = "Birim Listesi";
}

<h2>Birim Listesi</h2>

<p>
    @Html.ActionLink("Yeni Birim", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Birim Adı")
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model.Departments)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentName)
            </td>

            <td>
                @Html.ActionLink("Güncelle", "Edit", new { id = item.DepartmentId }) |
                @Html.ActionLink("Detay", "Details", new { id = item.DepartmentId }) |
                @Html.ActionLink("Sil", "Delete", new { id = item.DepartmentId })
            </td>
        </tr>
    }

</table>
<ul class="pagination">
    @Html.PageLinks(Model.PagingInfo, x => Url.Action("Index", new { page = x }))
</ul>