@model ToplantiTakip.Domain.Concrete.Event

@{
    ViewBag.Title = "Sil";
}

<h2>Toplantı Talebi Silme</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h3> Talebi Silmek istediğinizden emin misiniz?</h3>
    <div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.EventId)
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Room.RoomName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Room.RoomName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.EventSubject)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.EventSubject)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ReservationDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ReservationDate)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.StartDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.StartDate)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.EndDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.EndDate)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.EventDocument)
            </dt>

            <dd>
                @if (Model.EventDocument == null)
                {
                    <div>No Image</div>
                }
                else
                {
                    <img class="img-thumbnail" width="150" height="150"
                         src="@Url.Action("GetImage", "Event",
                        new { Model.EventId })" />
                }
            </dd>
        </dl>
    </div>

    <div class="form-actions no-color">
        @Html.ActionLink("Listeye Dön", "Index") | <input type="submit" value="Sil" class="btn btn-default" />
    </div>
}
